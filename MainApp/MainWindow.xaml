<Window x:Class="UIPredator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Predator" Height="600" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="523*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="BoardCanvas"  Background="Transparent" MouseDown="BoardCanvas_MouseDown" Grid.ColumnSpan="2"/>



        <!-- Add a Button -->
        <!-- Add these elements inside your main layout panel -->
        <StackPanel Grid.ColumnSpan="2">
            <Button x:Name="StartButton" Content="Start Game" Click="StartGameButtonClick"/>

        </StackPanel>
        <TextBox x:Name="LogTextBox"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.829,2.563" Margin="455,323,0,0" Grid.ColumnSpan="2"/>
    </Grid>

</Window>
