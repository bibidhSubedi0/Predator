<Window x:Class="UIPredator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Predator" Height="600" Width="600">

    <Grid>
        <Canvas x:Name="BoardCanvas" Background="LightGreen"/>

        <!-- Add a Button -->
        <!-- Add these elements inside your main layout panel -->
        <StackPanel>
            <Button x:Name="StartButton" Content="Start Game" Click="StartGameButtonClick"/>
             <TextBox x:Name="LogTextBox" 
             Height="250"
             IsReadOnly="True" 
             VerticalScrollBarVisibility="Auto"
             Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
