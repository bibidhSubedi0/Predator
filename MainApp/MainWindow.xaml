<Window x:Class="UIPredator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Predator vs Prey" 
        Height="800" Width="1200"
        Background="#2E3440"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Custom Styles -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#434C5E"/>
            <Setter Property="Foreground" Value="#ECEFF4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E81AC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3B4252"/>
            <Setter Property="Foreground" Value="#ECEFF4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Game Board Area -->
        <Border Grid.Column="0" 
                Background="#3B4252" 
                Margin="20"
                CornerRadius="10">
            <Canvas x:Name="BoardCanvas" 
                    Background="Transparent" 
                    MouseDown="BoardCanvas_MouseDown"/>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Column="1" 
                Background="#434C5E" 
                Padding="10">
            <StackPanel>
                <!-- Game Controls -->
                <Button x:Name="StartButton" 
                        Content="Start New Game"
                        Click="StartGameButtonClick"
                        Background="#5E81AC"
                        Margin="0 0 0 20"/>

                <!-- Status Indicator -->
                <Border Background="#3B4252" 
                        CornerRadius="5"
                        Padding="10"
                        Margin="0 0 0 20">
                    <TextBlock x:Name="StatusText"
                               Text="Status: Not Started"
                               Foreground="#88C0D0"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Game Log -->
                <TextBlock Text="Game Log:"
                           Foreground="#ECEFF4"
                           FontSize="14"
                           Margin="0 0 0 5"/>

                <Border Background="#3B4252" 
                        CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogTextBox"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Stretch"
                                 Height="300"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>