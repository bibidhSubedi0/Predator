<Window x:Class="UIPredator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Predator" Height="600" Width="600">

    <Grid>
        <Canvas x:Name="BoardCanvas" Background="LightGreen"/>

        <!-- Add a Button -->
        <!-- Add these elements inside your main layout panel -->
        <StackPanel>
            <Button x:Name="StartButton" Content="Start Game" Click="StartGameButtonClick"/>
            <Button x:Name="GoatMoveSay" Content="GoatMoveSay" Click="BoardPosition_Click"/>

        </StackPanel>
        <TextBox x:Name="LogTextBox"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         Width="152" RenderTransformOrigin="0.829,2.563" Margin="448,313,0,10"/>
    </Grid>

</Window>
